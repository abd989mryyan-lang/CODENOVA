<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sdfsfsfsfsfsf"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital Information"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/color3"
        android:layout_margin="20dp"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView"
        android:layout_marginTop="50dp"
        android:layout_margin="50dp"
        android:columnCount="2"
        android:rowCount="2">


        <androidx.cardview.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:outlineSpotShadowColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"

                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorLink="@color/white"
                    android:background="@color/white"
                    android:layout_gravity="fill_vertical"
                    android:textColorHint="@color/white"
                    android:gravity="center"
                    android:textColor="@color/color3"

                    android:text="Hospital Email\nand website\nlinks"
                    android:id="@+id/btn_hospital_email"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:outlineSpotShadowColor="@color/black"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"

                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorLink="@color/white"
                    android:background="@color/white"
                    android:layout_gravity="fill_vertical"
                    android:textColorHint="@color/white"
                    android:gravity="center"
                    android:textColor="@color/color3"

                    android:text="Link to\ncalendar?"
                    android:id="@+id/btn_link_to_calendar"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:outlineSpotShadowColor="@color/black"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"

                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorLink="@color/white"
                    android:background="@color/white"
                    android:layout_gravity="fill_vertical"
                    android:textColorHint="@color/white"
                    android:gravity="center"
                    android:textColor="@color/color3"

                    android:text="Hospital\nShowers"
                    android:id="@+id/btn_Hospital_showers"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:outlineSpotShadowColor="@color/black"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"

                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorLink="@color/white"
                    android:background="@color/white"
                    android:layout_gravity="fill_vertical"
                    android:textColorHint="@color/white"
                    android:gravity="center"
                    android:textColor="@color/color3"

                    android:text="Area map"
                    android:id="@+id/btn_area_map"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>

</RelativeLayout>